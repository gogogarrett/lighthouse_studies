#intro{"data-speed" => "5", "data-type" => "background"}
  %section.grid
    .container
      .row
        .col-md-12
          %h1 -#{@page.title}-

.container
  .row
    %section#main.col-md-8
      %h2 Upcoming Courses
      %p=raw @page.content_for(:body)
      %table.table.table-striped.table-responsive
        %thead
          %tr
            %th
              Course Title
            %th
              Level
            %th
              Cost
            %th
              Date
        %tbody
          - @courses.each do |course|
            %tr
              %td= link_to course.title, refinery.courses_course_path(course)
              %td= course.diff_level
              %td= number_to_currency course.cost, precision: 0
              %td= course.date.strftime("%A, %B %e")


    %section#sidebar.col-md-4
      .well
        %h3 Courses Sidebar
        %p=raw @page.content_for(:side_body)

