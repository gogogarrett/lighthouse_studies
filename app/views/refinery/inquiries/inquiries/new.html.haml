#intro{"data-speed" => "5", "data-type" => "background"}
  %section.grid
    .container
      .row
        .col-md-12
          %h1 -#{@page.title}-

.container
  .row

    %section#main.col-md-8
      %h2 Contact Us
      = form_for [refinery, :inquiries, @inquiry], html: { class: 'form-horizontal' } do |f|
        = render partial: "/refinery/admin/error_messages", locals: {object: @inquiry, include_object_name: true }

        .form-group
          = f.required_label :name, class: 'placeholder-fallback col-sm-2 control-label'
          .col-sm-10
            = f.text_field :name, class: 'text form-control', id: 'name', required: 'required', placeholder: 'name'
        .form-group
          = f.required_label :email, class: 'placeholder-fallback col-sm-2 control-label'
          .col-sm-10
            = f.email_field :email, class: 'text email form-control', id: 'email', required: 'required', placeholder: 'heinleng@gmail.com'
        .form-group
          = f.label :phone, class: 'placeholder-fallback col-sm-2 control-label'
          .col-sm-10
            = f.text_field :phone, class: 'text phone form-control', id: 'phone', required: 'required', placeholder: '0497826737'
        .form-group
          = f.required_label :message, class: 'placeholder-fallback col-sm-2 control-label'
          .col-sm-10
            = f.text_area :message, rows: 10, id: 'message', class: 'form-control', required: 'required', placeholder: 'Your message...'
        .form-group
          .col-sm-offset-2.col-sm-10
            = button_tag(type: 'submit', class: "btn btn-primary") do
              Send Message


    %section#sidebar.col-md-4
      .well
        %h3 Sidebar Contact
        %p
          A google map or just a list of address, phone number and email can go here.
